{% extends 'base.html.twig' %}

{% block title %}Galerie {{ gallery.name }} {% endblock %}

{% block body %}
    <h3 style="margin-left: 5rem; margin-top: 2rem;">Tous les tatouages de {{ gallery.name }}:</h3>
    <br>
    <a href="/admin/tattoo/all" style="margin-left: 10rem;">
        <button type="button" class="btn btn-outline-light">Tous les tatouages</button>
    </a>

    {% set path = "uploads/gallery/" %}

    {% for tattoo in gallery.gallery %}

        {% set img = tattoo.url %}
        {% set concatenedPath = path ~ img %}

        <div class="card text-white bg-dark mb-3" style="max-width: 100rem; margin-left: 10rem; margin-top: 2rem;">
            <div class="card-header"> {{ tattoo.id }} </div>
            <div class="card-body">
                <img src= {{ asset(concatenedPath)}}  alt="marche pas" width="10%" style="margin-bottom: 1rem;">
                <a href="{{ path('app_admin_tattoo_delete', {'id': tattoo.id})}}">
                    <button type="button" class="btn btn-outline-danger">Supprimer</button>
                </a>
            </div>
        </div>
    {% endfor %}


{% endblock %}







